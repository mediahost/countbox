<!DOCTYPE html>
<!--[if IE 8]> <html lang="{$lang}" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="{$lang}" class="ie9"> <![endif]-->
<!--[if !IE]><!--> <html lang="{$lang}"> <!--<![endif]-->

    <!-- BEGIN HEAD -->
    <head>
        <title>{block title|striptags}Countbox{/block}</title>

        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta content="width=device-width, initial-scale=1.0" name="viewport" />
        <meta name="robots" content="noindex,nofollow">
        <meta content="" name="description" />
        <meta content="" name="author" />

        <!-- BEGIN GLOBAL MANDATORY STYLES -->         
        {control cssMetronicCore}
        <!-- END GLOBAL MANDATORY STYLES -->

        <!-- BEGIN PAGE LEVEL PLUGIN STYLES -->        
        {control cssMetronicPlugin}
        <!-- END PAGE LEVEL PLUGIN STYLES -->

        <!-- BEGIN THEME STYLES -->       
        {control cssMetronicTheme}
        <!-- END THEME STYLES -->

        {control cssAdmin}
        {control cssPrint}

        <link href="{$basePath}/favicon.ico" rel="shortcut icon">

        {block head}{/block}
    </head>
    <!-- END HEAD -->
    
    <!-- BEGIN BODY -->
    <body class="page-header-fixed">
        <script> document.documentElement.className += ' js'</script>

        <div n:foreach="$flashes as $flash" class="flash {$flash->type}">{$flash->message}</div>

        {include 'header.latte'}

        <!-- BEGIN CONTAINER -->
        <div class="page-container">

            {include 'sidebar.latte'}

            <!-- BEGIN CONTENT -->
            <div class="page-content-wrapper">
                <!-- BEGIN PAGE -->
                <div class="page-content">
                    <!-- BEGIN PAGE HEADER-->
                    <div class="row" n:block="pageHeader">
                        <div class="col-md-12">
                            <!-- BEGIN PAGE TITLE & BREADCRUMB-->
                            <h3 class="page-title" n:block="pageTitle">
                                {block pageTitleText}
                                Countbox
                                <small>accounting system</small>
                                {/block}
                            </h3>

                            <ul class="page-breadcrumb breadcrumb" n:block="breadcrumb">
                                {block breadcrumbItems}
                                <li>
                                    <i class="fa fa-home"></i>
                                    <a n:href="this">Home</a> 
                                    <span class="fa fa-angle-right"></span>
                                </li>
                                <li><a n:href="this">Dashboard</a></li>
                                    {/block}
                            </ul>
                            <!-- END PAGE TITLE & BREADCRUMB--> 
                        </div>
                    </div>
                    <!-- END PAGE HEADER-->

                    <!-- CONTENT BODY-->
                    {include content}
                    <!-- END CONTENT BODY-->

                </div>      
                <!-- END PAGE -->
            </div>
            <!-- END CONTENT -->

        </div>
        <!-- END CONTAINER -->

        {include 'footer.latte'}

        {block scripts}
        <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
        <!-- BEGIN CORE PLUGINS -->
        <!--[if lt IE 9]>
        {control jsMetronicCoreIE9}
        <![endif]-->
        {control jsMetronicCore}
        <!-- END CORE PLUGINS -->

        <!-- BEGIN PAGE LEVEL PLUGINS -->
        {control jsMetronicPlugins}
        {control jsAppPlugins}
        <!-- END PAGE LEVEL PLUGINS -->

        <!-- BEGIN PAGE LEVEL SCRIPTS -->
        {control jsApp}
        <!-- END PAGE LEVEL SCRIPTS -->
        <!-- END JAVASCRIPTS -->

        {/block}
    </body>
</html>
